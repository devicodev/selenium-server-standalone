#!/bin/bash

#see http://stackoverflow.com/questions/7665/how-to-resolve-symbolic-links-in-a-shell-script
SELF_PATH=$(cd -P -- "$(dirname -- "$0")" && pwd -P) && SELF_PATH=$SELF_PATH/$(basename -- "$0")
while [ -h "$SELF_PATH" ]; do
    DIR=$(dirname -- "$SELF_PATH")
    SYM=$(readlink "$SELF_PATH")
    SELF_PATH=$(cd "$DIR" && cd $(dirname -- "$SYM") && pwd)/$(basename -- "$SYM")
done

for i in "$@"
do
	case $i in
	        -e=*|--env=*)
            	ENV="${i#*=}"
            		case $ENV in
            			CHROME_PATH="-Dwebdriver.chrome.driver=$(pwd -P)/vendor/bin"
            			linux_32)
							ENV="${CHROME_PATH}/chromedriver_linux_32"
						;;
						linux_64)
                            ENV="${CHROME_PATH}/chromedriver_linux_64"
                        ;;
						mac)
							ENV="${CHROME_PATH}/chromedriver_mac"
							
						;;
					esac
	        ;;
	         *)
            	PARAM="$i"
        	;;
	 esac
done
if [[ "$ENV" != "" ]]; then
    java -jar "$ENV" "${SELF_PATH}.jar" "$PARAM"
else
    java -jar "${SELF_PATH}.jar" "$PARAM"
fi
